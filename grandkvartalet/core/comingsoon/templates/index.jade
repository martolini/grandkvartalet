	meta(charset='utf-8')
	title Grandkvartalet - kommer snart!
	meta(name='description', content='Coming soon, understconstruction page')
	meta(name='keywords', content='coming, soon, underconstruction, skords')
	meta(name='author', content='Skords Graphics')
	meta(name='viewport', content='initial-scale=1.0')
	link(rel='stylesheet', type='text/css', href="{% static 'css/style.css' %}")
	link(rel='stylesheet', type='text/css', href="{% static 'css/ie8.css' %}")
	link(href='http://fonts.googleapis.com/css?family=PT+Sans:400,700,400italic|Open+Sans:400italic,700italic,400,600,700', rel='stylesheet', type='text/css')
	script(src="{% static 'js/jquery-latest.min.js' %}")
	script(src="{% static 'js/unslider.js' %}")
	script
		$(function() {
			$('.banner').unslider();
		});
	script(src="{% static 'js/jquery.countdown.js' %}")
	script(src="{% static 'js/script.js' %}")
body
	.slider
		.banner
			ul
				li
					img(src="{% static 'images/slider/2.jpg' %}", alt='1')
				li
					img(src="{% static 'images/slider/1.jpg' %}", alt='2')
				li
					img(src="{% static 'images/slider/3.jpg' %}", alt='3')
	.container
		.timer
			#countdown
				.days
					.label dager
					.pattern
						.block
					.number
						span.countDays
							span.position
								span.digit.static
							span.position
								span.digit.static
					.shadow
				.hours
					.label timer
					.pattern
						.block
					.number
						span.countHours
							span.position
								span.digit.static
							span.position
								span.digit.static
					.shadow
				.minutes
					.label min
					.pattern
						.block
					.number
						span.countMinutes
							span.position
								span.digit.static
							span.position
								span.digit.static
					.shadow.shadowFix2
				.seconds
					.label sek
					.pattern
						.block
					.number
						span.countSeconds
							span.position
								span.digit.static
							span.position
								span.digit.static
					.shadow.shadowFix
	.build.buildRight
	.build.buildLeft
	.clearfix
